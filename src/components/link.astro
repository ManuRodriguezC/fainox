---
import HoverLinkIndustrias from "./hoverLinkIndustrias.astro";

const { link } = Astro.props;
---

<li
  class="group relative"
  >
  <a
    href={`/${link.toLowerCase()}`}
    class="flex flex-row justify-center gap-2 items-center text-3xl text-colorBlue font-bold py-4" aria-keyshortcuts={link}>
    <p>
      {link}
    </p>
    <span class="arrow group-hover:rotate-195 group-hover:left-6 group-hover:top-1"></span>
  </a>
  {
    link.toLowerCase() == "industrias"
    &&
    <HoverLinkIndustrias />
  }
</li>
