---
import { Image } from "astro:assets";
import LayoutPage from "../layouts/LayoutPage.astro";
const novedades = [
  {
    title: "Tanque para Proceso Alimentario - Automático",
    description:
      "Equipo diseñado para producción de 1.000L útiles  provisto de Doble Camisa y Aislamiento, Sistema de Agitación Lenta y Emulsificador de alto cizallamiento. Sistema de Autolavado (CIP) Conexión de Tubería para Cargue y Descargue ,Sistema de Control de Llenado y Vaciado controlado con Celdas de Carga ,Todo el sistema controlado y operado desde un PLC con una HMI con recetas por tiempo de preparación, agitación y peso. Provisto de Bomba Positiva de tipo Sinusoidal, Válvulas de Control, Etc. Material : AISI 304",
    images: ["/innovations/prod1.jpeg", "/innovations/prod2.jpeg", "/innovations/prod3.jpeg", "/innovations/prod4.jpeg"],
    video: "/videos/WhatsApp Video 2025-01-18 at 1.21.16 PM.mp4"
  },
  {
    title: "Marmita para Fabricación de Derivados Lácteo",
    description:
      "Equipo para preparación de tipo manual con sistema de combustión a gas mediante quemadores, sistema de volteo, con capacidad para 200kl con sistema de agitación incorporado.",
    images: [
      "/innovations/Desarrollo y Novedades 3.webp",
    ],
  },
  {
    title: "CIP Central",
    description:
      "Equipo totalmente automático diseñado para el lavado de Marmitas de Proceso, Silos para Leche y Líneas de Tubería. Cuatro tanques con Agitación, Sistema de Calentamiento, Válvulas Automáticas, Bombas de Impulso, Bombas Dosificadoras de Sosa y Ácido. Pantalla Táctil,PLC ,HMI Delta control desde tablero y remoto para interior de planta.",
    images: [
      "/innovations/marmita de fabricacion1.webp",
      "/innovations/marmita de fabricacion2.jpeg"
    ],
  },
  {
    title: "Intercambiador de Calor",
    description:
      "Equipo fabricado para el enfriamiento de Salsas. Material : AISI 304",
    images: [
      "/innovations/intercambiador de calor1.webp",
      "/innovations/intercambiador de calor2.jpeg"
    ],
  },
  {
    title: "Intercambiador Corrugado",
    description:
      "Sistema de Enfriamiento para Yogurt desarrollado para 10.000L/h en Tuberia Sanitaria Corrugada en AISI-316l conexiones Clamp, Sistema de Control de Temperatura, Valvulas de desvio , etc.",
    images: [
      "/innovations/intercambiador corrugado 1.webp",
      "/innovations/intercambiador corrugado 2.jpeg",
      "/innovations/intercambiador corrugado 3.jpeg",
    ],
    video: "/videos/WhatsApp Video 2025-01-18 at 1.15.58 PM.mp4"
  },
  {
    title: "Tanques Deposito - Silos para Leche",
    description:
      "Equipos desarrollados mpara Almacenemiento y conservacion de leche entera , con suistemas de agitacion vertical en AISI-304 , con capacidad para 60.000Litros",
    images: [
      "/innovations/tanque1.jpeg",
      "/innovations/tanque2.jpeg",
      "/innovations/tanque3.jpeg",
      "/innovations/tanque4.jpeg"
    ],
    // video: "/videos/WhatsApp Video 2025-01-18 at 1.15.58 PM.mp4"
  },
];
---

<LayoutPage title="Novedades Fainox">
  <section
    class="w-full h-auto flex flex-col justify-center items-center py-16 md:py-20 lg:pt-36"
  >
    <h1
      class="w-[80%] md:w-[70%] text-center text-colorBlue font-semibold md:leading-7 lg:leading-10 text-2xl lg:text-4xl"
    >
      Aqui algunos de nuestros desarrollos!
    </h1>

    <div
      class="flex flex-col px-4 md:px-14 xl:px-24 justify-center w-full items-center gap-36 py-10 lg:py-16"
    >
      {
        novedades.map(({ title, description, images, video }) => (
          <div class="w-full h-auto flex flex-col gap-5 items-center justify-center">

            <div class="flex flex-col lg:flex-row w-full gap-2 h-full justify-center items-center">
              {
                video
                &&
                <video
                autoplay 
                loop 
                muted
                class="shadow-lg h-[600px]">
                  <source src={video} type="video/mp4"/>
                </video>
              }
              <div class="max-w-[370px] max-h-[370px] lg:max-w-[600px] lg:max-h-[600px] flex flex-wrap gap-2 justify-center">
                {
                  images.map((image) => (
                    <Image
                            class="object-cover h-[180px] w-[180px] lg:h-[292px] lg:w-[292px]"
                            width={300}
                            height={300}
                            src={image}
                            alt={title}
                          />
                  ))
                }
              </div>
            </div>
            <div class="px-1 w-full lg:px-10 flex flex-col gap-5">
              <div class="flex flex-col justify-start">
                <p class="text-colorBlue">Nombre del equipo:</p>
                <h2 class="text-colorBlue py-1 font-semibold text-3xl">{title}</h2>
              </div>
              <div class="flex flex-col justify-start">
                <p class="text-colorBlue">Descripción:</p>
                <p class="text-gray-500 text-lg text-justify">{description}</p>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <div class="w-full flex flex-col justify-center items-center"></div>
  </section>
</LayoutPage>
