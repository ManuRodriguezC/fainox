  li::marker {
    color: #084ca5;
  }

  .arrow {
    width: 0px;
    height: 0px;
    background-color: black;
    position: relative;
    transform: rotate(30deg);
  }

  .arrow::before {
    content: "";
    position: absolute;
    top: -10px;
    left: 5px;
    width: 10px;
    height: 10px;
    border-right: 2px solid black;
    border-bottom: 2px solid black;
    transform: rotate(15deg);
  }
  .arrow-top {
    width: 0px;
    height: 0px;
    background-color: black;
    position: relative;
    transform: rotate(30deg);
    transition: all 0.3s ease-in-out;
  }

  .arrow-top::before {
    content: "";
    position: absolute;
    top: -10px;
    left: 5px;
    width: 10px;
    height: 10px;
    border-right: 2px solid black;
    border-bottom: 2px solid black;
    transform: rotate(195deg);
    transition: all 0.3s ease-in-out;
  }

  .scroll-hidden::-webkit-scrollbar {
    display: none;
  }

  .no-display {
    visibility: hidden;
  }

  .see {
    visibility: visible;
  }

  .backgroundProduct {
    background: linear-gradient(to bottom, transparent 75%, #677f9f 200%);
  }

  @keyframes image1 {
    from {
      transform: scale(0.45) translateX(600px);
      opacity: 0;
    }
    to {
      transform: scale(1) translateX(0);
      opacity: 1;
    }
  }

  .showImage {
    view-timeline-name: --showImage;
    view-timeline-axis: block;
    animation-timeline: --showImage;
    animation-name: image1;
    animation-range: entry 5% cover 45%;
    animation-fill-mode: both;
  }

  @keyframes image2 {
    from {
      transform: scale(0.45) translateX(-500px);
      opacity: 0;
    }
    to {
      transform: scale(1) translateX(0);
      opacity: 1;
    }
  }

  .showImage2 {
    view-timeline-name: --showImage;
    view-timeline-axis: block;
    animation-timeline: --showImage;
    animation-name: image2;
    animation-range: entry 5% cover 35%;
    animation-fill-mode: both;
  }

  @keyframes show {
    from {
      opacity: 0;
      scale: 25%;
    }
    to {
      opacity: 1;
      scale: 100%;
    }
  }

  .seeContent {
    view-timeline-name: --image;
    view-timeline-axis: block;
    animation-timeline: --image;
    animation-name: show;

    animation-range: entry 20% cover 30%;
    animation-fill-mode: both;
    animation-duration: 4s;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .inside {
    animation: fadeIn 2s ease-in forwards;
  }

  .image {
    opacity: 0;
    transition: opacity 9s ease-in-out;
  }

  .image.hidden {
    opacity: 0;
    transition: opacity 9s ease-in-out;
  }

  .image.fade-in {
    opacity: 1;
    transition: opacity 1s ease-in-out;
  }
