---
import '@fontsource-variable/sora';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
  }
  html {
    /* font-family: system-ui, sans-serif; */
    font-family: 'Sora Variable', sans-serif;
  }
  body {
    width: 100%;
    background-image: linear-gradient(
        22.5deg,
        rgba(67, 67, 67, 0.02) 0%,
        rgba(67, 67, 67, 0.02) 29%,
        rgba(47, 47, 47, 0.02) 29%,
        rgba(47, 47, 47, 0.02) 37%,
        rgba(23, 23, 23, 0.02) 37%,
        rgba(23, 23, 23, 0.02) 55%,
        rgba(182, 182, 182, 0.02) 55%,
        rgba(182, 182, 182, 0.02) 69%,
        rgba(27, 27, 27, 0.02) 69%,
        rgba(27, 27, 27, 0.02) 71%,
        rgba(250, 250, 250, 0.02) 71%,
        rgba(250, 250, 250, 0.02) 100%
      ),
      linear-gradient(
        67.5deg,
        rgba(117, 117, 117, 0.02) 0%,
        rgba(117, 117, 117, 0.02) 14%,
        rgba(199, 199, 199, 0.02) 14%,
        rgba(199, 199, 199, 0.02) 40%,
        rgba(33, 33, 33, 0.02) 40%,
        rgba(33, 33, 33, 0.02) 48%,
        rgba(135, 135, 135, 0.02) 48%,
        rgba(135, 135, 135, 0.02) 60%,
        rgba(148, 148, 148, 0.02) 60%,
        rgba(148, 148, 148, 0.02) 95%,
        rgba(53, 53, 53, 0.02) 95%,
        rgba(53, 53, 53, 0.02) 100%
      ),
      linear-gradient(
        135deg,
        rgba(190, 190, 190, 0.02) 0%,
        rgba(190, 190, 190, 0.02) 6%,
        rgba(251, 251, 251, 0.02) 6%,
        rgba(251, 251, 251, 0.02) 18%,
        rgba(2, 2, 2, 0.02) 18%,
        rgba(2, 2, 2, 0.02) 27%,
        rgba(253, 253, 253, 0.02) 27%,
        rgba(253, 253, 253, 0.02) 49%,
        rgba(128, 128, 128, 0.02) 49%,
        rgba(128, 128, 128, 0.02) 76%,
        rgba(150, 150, 150, 0.02) 76%,
        rgba(150, 150, 150, 0.02) 100%
      ),
      linear-gradient(90deg, #ffffff, #ffffff);
  }

  li::marker {
    color: #084ca5;
  }

  .arrow {
    width: 0px;
    height: 0px;
    background-color: black;
    position: relative;
    transform: rotate(30deg);
  }

  .arrow::before {
    content: "";
    position: absolute;
    top: -10px;
    left: 5px;
    width: 10px;
    height: 10px;
    border-right: 2px solid black;
    border-bottom: 2px solid black;
    transform: rotate(15deg);
  }
  .arrow-top {
    width: 0px;
    height: 0px;
    background-color: black;
    position: relative;
    transform: rotate(30deg);
    transition: all 0.3s ease-in-out;
  }

  .arrow-top::before {
    content: "";
    position: absolute;
    top: -10px;
    left: 5px;
    width: 10px;
    height: 10px;
    border-right: 2px solid black;
    border-bottom: 2px solid black;
    transform: rotate(195deg);
    transition: all 0.3s ease-in-out;
  }

  .scroll-hidden::-webkit-scrollbar {
    display: none;
  }

  .no-display {
    visibility: hidden;
  }

  .see {
    visibility: visible;
  }

  .backgroundProduct {
    background: linear-gradient(to bottom, transparent 75%, #677f9f 200%);
  }

  @keyframes image1 {
    from {
      transform: scale(0.45) translateX(300px);
      opacity: 0;
    }
    to {
      transform: scale(1) translateX(0);
      opacity: 1;
    }
  }

  .showImage {
    view-timeline-name: --showImage;
    view-timeline-axis: block;
    animation-timeline: --showImage;
    animation-name: image1;
    animation-range: entry 5% cover 45%;
    animation-fill-mode: both;
  }

  @keyframes image2 {
    from {
      transform: scale(0.45) translateX(-300px);
      opacity: 0;
    }
    to {
      transform: scale(1) translateX(0);
      opacity: 1;
    }
  }

  .showImage2 {
    view-timeline-name: --showImage;
    view-timeline-axis: block;
    animation-timeline: --showImage;
    animation-name: image2;
    animation-range: entry 5% cover 35%;
    animation-fill-mode: both;
  }

  @keyframes show {
    from {
      opacity: 0;
      scale: 25%;
    }
    to {
      opacity: 1;
      scale: 100%;
    }
  }

  .seeContent {
    view-timeline-name: --image;
    view-timeline-axis: block;
    animation-timeline: --image;
    animation-name: show;

    animation-range: entry 20% cover 30%;
    animation-fill-mode: both;
    animation-duration: 4s;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .inside {
    animation: fadeIn 2s ease-in forwards;
  }

  .image {
    opacity: 0;
    transition: opacity 9s ease-in-out;
  }

  .image.hidden {
    opacity: 0;
    transition: opacity 9s ease-in-out;
  }

  .image.fade-in {
    opacity: 1;
    transition: opacity 1s ease-in-out;
  }

  aside::-webkit-scrollbar {
    width: 0.7rem;
  }

  aside::-webkit-scrollbar-track {
    box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
  }

  aside::-webkit-scrollbar-thumb {
    background-color: rgb(75, 78, 132);
    outline: 1px solid rgb(3, 30, 57);
    border-radius: 20px;
  }

  @keyframes indu {
    from {
      transform: scale(0.8); /* Usando transform */
      filter: blur(5px);
    }
    to {
      transform: scale(1); /* Usando transform */
      filter: blur(0px);
    }
  }

  .indu {
    view-timeline-name: --image;
    view-timeline-axis: block;
    animation-timeline: --image;
    animation-name: indu;

    animation-range: entry 20% cover 30%;
    animation-fill-mode: both;
    animation-duration: 4s;
  }

  @keyframes animationtext {
    0% {
      content: "E";
    }
    10% {
      content: "En";
    }
    20% {
      content: "Env";
    }
    30% {
      content: "Envi";
    }
    40% {
      content: "Envia";
    }
    50% {
      content: "Envian";
    }
    60% {
      content: "Enviand";
    }
    70% {
      content: "Enviando";
    }
    80% {
      content: "Enviando .";
    }
    90% {
      content: "Enviando ..";
    }
    100% {
      content: "Enviando ...";
    }
  }

  .sending::after {
    content: "";
    animation-name: animationtext;
    animation-duration: 1200ms;
    animation-iteration-count: infinite;
  }

  .seeForm {
    visibility: visible;
    max-height: 800px; /* Ajusta seg√∫n el contenido esperado */
    overflow: hidden;
    transition:
      max-height 0.5s ease,
      visibility 0.5s ease;
  }

  .noseeForm {
    visibility: hidden;
    max-height: 0;
    overflow: hidden;
    transition:
      max-height 0.5s ease,
      visibility 0.3s ease;
  }
</style>
